import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
     Scanner sc = new Scanner(System.in);
     int t = sc.nextInt();
     for(int j=0;j<t;j++)
     {
      int n = sc.nextInt();
      int sum=0;
      for(int i=1;i<=n;i+=2)
      {
       sum+=(n-i+1)*(n-i+1);
      }
      System.out.println(sum);
     }
	}
}
