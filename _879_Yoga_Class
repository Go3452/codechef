import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t = sc.nextInt();
	 for(int i=0;i<t;i++)
	 {
	 int n = sc.nextInt();
	 int x = sc.nextInt();
	 int y = sc.nextInt();
	 int a = x*2;
	 if(a>=y)
	 {
	  System.out.println(n*x);
	 }
	 else
	 {
	  if(n%2==0)
	   System.out.println(n/2*y);
	  else
	   System.out.println(n/2*y+x);
	 }
	 }
	}
}
