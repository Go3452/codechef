import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t = sc.nextInt();
	 for(int i=0;i<t;i++)
	 {
	 int n = sc.nextInt();
	 int m = sc.nextInt();
	 int k = sc.nextInt();
	 int a = (n>m)?(n-m):(m-n);
	 if(a==0)
	  System.out.println(0);
	 else if(a>k)
	 {
	  System.out.println(a-k);
	 }
	 else
	 {
	  System.out.println(0);
	 }
	}
}
}
