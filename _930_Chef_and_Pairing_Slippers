import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
     Scanner sc = new Scanner(System.in);
     int t=sc.nextInt();
     for(int i=0;i<t;i++)
     {
      int n=sc.nextInt();
      int l=sc.nextInt();
      int x=sc.nextInt();
      if(n==0||l==0||n==l)
       System.out.println(0);
      else
      {
       int r=n-l;
       int pair=l<r?l:r;
       System.out.println(pair*x);
      }
     }
	}
}
