import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t=sc.nextInt();
	 for(int j=0;j<t;j++)
	 {
	  int a=sc.nextInt();
	  int b=sc.nextInt();
	  int p=sc.nextInt();
	  int q=sc.nextInt();
	  if(a==p&&b==q)
	   System.out.println(0);
	  else if((a+b)%2==(p+q)%2)
	   System.out.println(2);
	  else
	   System.out.println(1);
	 }
	}
}
