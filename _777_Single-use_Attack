import java.util.Scanner;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
     Scanner sc = new Scanner(System.in);
     int t = sc.nextInt();
     for(int i=0;i<t;i++)
     {
      int h=sc.nextInt();
      int x=sc.nextInt();
      int y=sc.nextInt();
      h-=y;
      int count=h<=0?0:(h%x==0?h/x:h/x+1);
      count++;
      System.out.println(count);
     }
	}
}
