import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t=sc.nextInt();
	 for(int j=0;j<t;j++)
	 {
	  int n=sc.nextInt();
	  if(n<6)
	   System.out.println(0);
	  else
	  {
	   int count=1;
	   n-=6;
	   count+=n/7;
	   System.out.println(count);
	  }
	 }
	}
}
