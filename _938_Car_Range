import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t = sc.nextInt();
	 for(int j=0;j<t;j++)
	 {
	  int p=sc.nextInt();
	  int m=sc.nextInt();
	  int v=sc.nextInt();
	  System.out.println((m-p+1)*v);
	 }
	}
}
