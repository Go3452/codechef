import java.util.*;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
     Scanner sc = new Scanner(System.in);
     int t = sc.nextInt();
     for(int i=0;i<t;i++)
     {
      int n,x,count=0;
      n = sc.nextInt();
      x = sc.nextInt();
      int a[] = new int[n];
      for(int j=0;j<n;j++)
      { 
        a[j] = sc.nextInt();
        if(a[j]>=x)
         count++;
      }
      System.out.println(count);
     }
	}
}
