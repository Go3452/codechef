import java.util.Scanner;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	  Scanner sc = new Scanner(System.in);
	  int t = sc.nextInt();
	  for(int i=0;i<t;i++)
	  {
	   int n = sc.nextInt();
	   int m = sc.nextInt();
	   int c = m/2 + 1;
	   System.out.println(c);
	  }
	}
}
