import java.util.Scanner;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t=sc.nextInt();
	 for(int i=0;i<t;i++)
	 {
	  int n=sc.nextInt();
	  int x=sc.nextInt();
	  int y=sc.nextInt();
	  int a  = (n+1)*y;
	  if(a>=x)
	   System.out.println("Yes");
	  else 
	   System.out.println("No");
	 }
	}
}
