import java.util.Scanner;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t = sc.nextInt();
	 for(int i=0;i<t;i++)
	 {
	  int a = sc.nextInt();
	  int b = sc.nextInt();
	  int c = b-a;
	  if(c%3==1 || c%3==0)
	   System.out.println("Yes");
	  else 
	   System.out.println("No");
	 }
	}
}
