import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t = sc.nextInt();
	 for(int j=0;j<t;j++)
	 {
	  int n = sc.nextInt();
	  int pos=0;
	  if(n%2==1)
	  {
	   pos=n/2+1;
	   pos=-pos;
	  }
	  else
	   pos=n/2;
	  System.out.println(pos);
	 }
	}
}
