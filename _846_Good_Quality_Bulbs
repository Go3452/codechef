import java.util.Scanner;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t=sc.nextInt();
	 for(int i=0;i<t;i++)
	 {
	  int n=sc.nextInt();
	  int k=sc.nextInt();
	  int []arr=new int[n-1];
	  int sum=0;
	  for(int j=0;j<n-1;j++)
	   {
	    arr[j]=sc.nextInt();
	    sum+=arr[j];
	   }
	  int val=n*k;
	  if(val<=sum)
	   System.out.println(0);
	  else
	   System.out.println(val-sum);
	 }
	}
}
