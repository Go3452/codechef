import java.util.Scanner;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	 Scanner sc = new Scanner(System.in);
	 int t=sc.nextInt();
	 for(int i=0;i<t;i++)
	 {
	 int g1=sc.nextInt();
	 int s1=sc.nextInt();
	 int b1=sc.nextInt();
	 int g2=sc.nextInt();
	 int s2=sc.nextInt();
	 int b2=sc.nextInt();
	 int sum1=g1+b1+s1;
	 int sum2=g2+s2+b2;
	 if(sum1>sum2)
	  System.out.println(1);
	 else
	  System.out.println(2);
	}
}
}
